<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>Preguntas</title>
    <link  rel="icon"   href="/img/favicon.png" type="image/png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/stylesheet.css">
    <link rel="stylesheet" href="/css/questions.css">
    <link rel="stylesheet" href="/css/user.css">
</head>

<body>
    <%- include('header.ejs') %>
    <div class="container-fluid  h-100" style="margin-top: 1em;">
        <div class="row justify-content-center mb-3 ">
            <div class="col-6">
                <div class="row border border-success bg-light rounded justify-content-center m-3">
                    <div class="col-8 justify-content-center">
                        <label class="row rounded-top">
                            <div class="ml-2 mt-2 question_title"><%= question.title %></div>
                        </label>
                        <label class="row texto">
                            <div class="ml-2 mt-1 mb-2 question_body"><%= question.q_body%></div>
                        </label>
                        <div class="row justify-content-start">
                            <% question.tags.forEach(function(tag){ %>
                                <a href="/questions/tag/<%= tag %>" class=" btn btn-sm btn-dark m-2 texto-tag" title="<%= tag %>"><%= tag %></a>
                            <% }); %>
                        </div>
                    </div>
                    <div class="col-4 justify-content-center rounded">
                        <label class="row text-center">
                            <div class="question_date mt-4">Formulada el <%= question.q_date %></div>
                        </label>
                        <div class="row justify-content-center">
                            <img src="<%= question.user_img %>" class="img-fluid my-3 question_img" alt="Responsive image">
                        </div>
                        <label class="row text-center">
                            <div class="question_nombre mb-2"><%= question.name %></div>
                        </label>
                    </div>
                </div>
            </div>
            
        </div>
        <div class="row justify-content-center">
            <div class="col-6 question_number">
                <%= n_answers %> Respuestas
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-6 rounded">
                <% answers.forEach(function(answer){ %>
                    <div class="row border border-success bg-light rounded justify-content-center m-3">
                        <div class="col-8 justify-content-center">
                            <label class="row texto">
                                <div class="ml-2 mt-1 mb-2 question_body"><%= answer.a_body%></div>
                            </label>
                        </div>
                        <div class="col-4 justify-content-center rounded">
                            <label class="row text-center">
                                <div class="question_date mt-4">Formulada el <%= answer.a_date %></div>
                            </label>
                            <div class="row justify-content-center">
                                <img src="<%= answer.user_img %>" class="img-fluid my-3 question_img" alt="Responsive image">
                            </div>
                            <label class="row text-center">
                                <div class="question_nombre mb-2"><%= answer.name %></div>
                            </label>
                        </div>
                    </div><!-- row responsive -->
                <% }); %>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-6 ">
                <form class="formulario mb-3" action="/questions/createAnswer/<%=question.question_id%>" method="POST">
                    <div class="form-row mt-3">
                        <div class="form-group">
                            <div class="row">
                                <label  class="h5" for="a_body">Tu respuesta</label>
                            </div>
                            <div class="row">
                                <label  for="a_body">Incluye toda la información que alguien necesitaría para entender tu respuesta</label>
                            </div>
                            <textarea class="form-control" name="a_body" rows="6"  maxlength="5000"></textarea>
                        </div>
                    </div>
                    <div class="form-row mt-3 text-center">
                        <button type="submit" class="btn bg-dark text-light" style="width: 30%;">Publica tu respuesta</button>
                    </div>  
                </form>
            </div>
        </div>
    </div>
</body>
</html>