<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>Preguntas</title>
    <link  rel="icon"   href="/img/favicon.png" type="image/png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/stylesheet.css">
    <link rel="stylesheet" href="/css/questions.css">
    <link rel="stylesheet" href="/css/user.css">
</head>

<body>
    <%- include('header.ejs') %>
    <div class="container-fluid  h-100" style="margin-top: 1em;">
        <div class="row justify-content-center mb-3 titulo_consulta">
            <%= title %>
        </div>
        <div class="row justify-content-center mb-3 ">
            <div class="col-6">
                <div class="row justify-content-between">
                    <div class="col-6 question_number">
                        <%= n_questions %> preguntas
                    </div>
                    <a type="button" href="/questions/create/" class="btn btn-dark btn-sm col-4 question_formulateBtn">
                        Formular una pregunta
                    </a>
                </div>
            </div>
            
        </div>
        <div class="row justify-content-center">
            <div class="col-8 rounded">
                <% questions.forEach(function(question){ %>
                    <div class="row border border-success bg-light rounded justify-content-center m-3">
                        <div class="col-8 justify-content-center">
                            <label class="row rounded-top">
                                <div class="ml-2 mt-2 question_title"><%= question.title %></div>
                            </label>
                            <label class="row texto">
                                <div class="ml-2 mt-1 mb-2 question_body"><%= question.q_body%></div>
                            </label>
                            <div class="row justify-content-start">
                                <% question.tags.forEach(function(tag){ %>
                                    <a href="/questions/tag/<%= tag %>" class=" btn btn-sm btn-dark m-2 texto-tag" title="<%= tag %>"><%= tag %></a>
                                <% }); %>
                            </div>
                        </div>
                        <div class="col-4 justify-content-center rounded">
                            <label class="row text-center">
                                <div class="question_date mt-4">Formulada el <%= question.q_date %></div>
                            </label>
                            <div class="row justify-content-center">
                                <img src="<%= question.userImg %>" class="img-fluid my-3 question_img" alt="Responsive image">
                            </div>
                            <label class="row text-center">
                                <div class="question_nombre mb-2"><%= question.name %></div>
                            </label>
                        </div>
                    </div><!-- row responsive -->
                <% }); %>
            </div><!-- columna -->
        </div>
    </div>
</body>
</html>